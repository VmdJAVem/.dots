#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: true,
    format_tag_separator: " | ",
    browser_column_widths: [20, 38, 42],
    background_color: Some("#1D2021"),        // Uniform background (Gruvbox bg1)
    text_color: Some("#ebdbb2"),              // Gruvbox foreground
    header_background_color: Some("#1D2021"), // Same as main background
    modal_background_color: Some("#1D2021"),  // Same as main background
    preview_label_style: (fg: "#fabd2f"),     // Gruvbox yellow
    preview_metadata_group_style: (fg: "#fabd2f", modifiers: "Bold"),
    tab_bar: (
        enabled: true,
        active_style: (fg: "#1D2021", bg: "#83a598", modifiers: "Bold"), // Gruvbox blue
        inactive_style: (fg: "#a89984", bg: "#1D2021"), // Gruvbox gray on bg1
    ),
    highlighted_item_style: (fg: "#83a598", modifiers: "Bold", bg: "#1D2021"), // Blue text
    current_item_style: (fg: "#1D2021", bg: "#83a598", modifiers: "Bold"), // Blue background
    borders_style: (fg: "#83a598"),          // Gruvbox blue
    highlight_border_style: (fg: "#83a598"), // Gruvbox blue
    symbols: (song: "S", dir: "D", playlist: "P", marker: "M", ellipsis: "..."),
    progress_bar: (
        symbols: ["[", "-", ">", " ", "]"],
        track_style: (fg: "#282828"),        // Gruvbox bg0 (darker)
        elapsed_style: (fg: "#83a598"),      // Gruvbox blue
        thumb_style: (fg: "#83a598", bg: "#282828"), // Blue on dark
    ),
    scrollbar: (
        symbols: ["│", "█", "▲", "▼"],
        track_style: (bg: "#1D2021"),        // Match main background
        ends_style: (bg: "#1D2021"),         // Match main background
        thumb_style: (fg: "#83a598", bg: "#1D2021"), // Blue on bg1
    ),
    song_table_format: [
        (
            prop: (kind: Property(Artist),
                default: (kind: Text("Unknown"))
            ),
            width: "20%",
        ),
        (
            prop: (kind: Property(Title),
                default: (kind: Text("Unknown"))
            ),
            width: "35%",
        ),
        (
            prop: (kind: Property(Album), style: (fg: "#ebdbb2"), // Main text color
                default: (kind: Text("Unknown Album"), style: (fg: "#ebdbb2"))
            ),
            width: "30%",
        ),
        (
            prop: (kind: Property(Duration),
                default: (kind: Text("-"))
            ),
            width: "15%",
            alignment: Right,
        ),
    ],
    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "#fabd2f", modifiers: "Bold")),
                    (kind: Property(Status(State)), style: (fg: "#fabd2f", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "#fabd2f", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Title)), style: (modifiers: "Bold"),
                        default: (kind: Text("No Song"), style: (modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Property(Widget(ScanStatus)), style: (fg: "#83a598")),
                    (kind: Property(Widget(Volume)), style: (fg: "#83a598"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed))),
                    (kind: Text(" / ")),
                    (kind: Property(Status(Duration))),
                    (kind: Text(" (")),
                    (kind: Property(Status(Bitrate))),
                    (kind: Text(" kbps)"))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#fabd2f", modifiers: "Bold"),
                        default: (kind: Text("Unknown"), style: (fg: "#fabd2f", modifiers: "Bold"))
                    ),
                    (kind: Text(" - ")),
                    (kind: Property(Song(Album)),
                        default: (kind: Text("Unknown Album"))
                    )
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "#ebdbb2", modifiers: "Bold"),
                            separator_style: (fg: "#ebdbb2")))
                        ),
                        style: (fg: "#928374") // Gruvbox gray
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
)
